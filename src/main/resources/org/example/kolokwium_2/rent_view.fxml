<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.kolokwium_2.RentController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Wypożyczenie książki"/>

    <Label text="Imię:"/>
    <TextField fx:id="firstNameField" promptText="Wpisz imię"/>

    <Label text="Nazwisko:"/>
    <TextField fx:id="lastNameField" promptText="Wpisz nazwisko"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Zatwierdź" onAction="#ConfirmButtonClicked"/>
        <Button text="Anuluj" onAction="#CancelButtonClicked"/>
    </HBox>
</VBox>
